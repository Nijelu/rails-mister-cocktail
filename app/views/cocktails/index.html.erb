<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <div class="flex">
          <form action="<%= cocktails_path %>" class="form-inline">
            <div class="form-group">
              <input type="text" name="query" class="form-control" placeholder="<%= params[:query] %>">
              <input type="submit" value="Search" class="form-control btn btn-success">
            </div>
            <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-primary form-control' %>
          </form>
      </div>
    </div>
  </div>
  <div class="row m-b-100">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" data-aos="zoom-in" data-aos-anchor-placement="bottom-bottom">
            <div class="card-image" style="background-image: url('<%= cl_image_path(cocktail.photo, crop: :fill) unless cocktail.photo.blank? %>')">
              <span><%= cocktail.name %></span>
            </div>

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
